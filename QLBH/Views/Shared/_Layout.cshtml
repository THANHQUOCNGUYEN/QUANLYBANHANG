
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Css/readmore.js"></script>
    <link href="~/Css/footer.css" rel="stylesheet" />
    <link href="~/Css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/themes/eggplant/jquery-ui.css" />

    <style>
        .khoangcach {
            margin-top: 10px;
            border: 1px solid #ccc;
        }

        .menu {
            font-size: 120%;
            font-weight: bold;
            background-color: #eb4924;
            width: 100%;
            border: 1px solid;
        }

        .container {
            padding: 0;
        }

        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -1px;
            }
    </style>
</head>
<body>
    <div class="top-bar">
        <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color:white;border-bottom:none">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse menu" id="myNavbar">
                    <ul class="nav navbar-nav navbar-left">
                        <li><a style="color:white" href="@Url.Action("Index","Home")">TRANG CHỦ</a></li>
                        <li class="dropdown">
                            <a style="color:white;background-color:#eb4924" data-toggle="dropdown" href="#">
                                HT BÁN HÀNG
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" style="padding:0">
                                <li style="display:block;background-color:#eb4924"><a style="padding:10px" href="#">QUẦN ÁO</a></li>
                                <li style="display:block;background-color:#eb4924"><a style="padding:10px" href="#">GIÀY DÉP</a></li>
                                <li style="display:block;background-color:#eb4924" class="dropdown-submenu">
                                    <a class="test" style="padding:10px" href="#">QUẦN ÁO <span class="caret"></span></a>
                                    <ul class="dropdown-menu" style="background-color:#eb4924;padding:0;border:0">
                                        <li><a href="#" style="padding:10px;">Thanh Quốc 1</a></li>
                                        <li style="padding:10px;">Thanh Quốc 2</li>
                                        <li style="padding:10px;">Thanh Quốc 3</li>
                                        <li style="padding:10px;">Thanh Quốc 4</li>
                                        <li style="padding:10px;">Thanh Quốc 5</li>

                                    </ul>
                                </li>
                                <li style="display:block;background-color:#eb4924"><a style="padding:10px" href="#">QUẦN HÀM</a></li>
                                <li style="display:block;background-color:#eb4924"><a style="padding:10px" href="#">CẤP HIỆU</a></li>
                                <li style="display:block;background-color:#eb4924"><a style="padding:10px" href="#">PHÙ HIỆU</a></li>
                            </ul>
                        </li>
                        <li><a style="color:white" href="#">Giới thiệu</a></li>
                        <li><a style="color:white" href="#">MUA HÀNG TRỰC TUYẾN</a></li>
                        <li><a style="color:white" href="#">TRUYỀN THÔNG</a></li>
                        <li class="dropdown">
                            <a style="color:white;background-color:#eb4924" data-toggle="dropdown" href="#">
                                Sản Phẩm
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" style="padding:0">
                                <li style="display:block;background-color:#eb4924"><a style="padding:10px" href="#">Cửa hàng 125</a></li>
                                <li style="display:block;background-color:#eb4924"><a style="padding:10px" href="#">Cửa hàng 47</a></li>
                            </ul>
                        </li>
                        <li><a style="color:white" href="@Url.Action("Contact","Home")">LIÊN HỆ</a></li>
                    </ul>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <form class="navbar-form" action="@Url.Action("Index","Home")">
                                <div class="form-group">
                                    <input type="text" id="search" name="txttim" class="form-control" value="@ViewBag.tim" placeholder="Gõ từ khóa">
                                </div>
                                <button type="submit" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-search"></span></button>
                            </form>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (Session["Email"] != null)
                        {
                            <li><a style="color:red" href="#">Thân chào :</a></li>
                            <li><a style="color:red" href="#">@Session["Email"].ToString()</a></li>
                            <li><a style="color:red" href="@Url.Action("LogOut","NguoiDung")"><span></span>Logout</a></li>
                        }
                        else
                        {

                            <li>
                                <img src="~/Content/img/shopping-cart.png" style="width:40px;height:40px;">
                                @Html.Action("BagCart", "GioHang")
                            </li>

                            <li><a style="color:red" href="@Url.Action("DangKi","NguoiDung")"><span class="glyphicon glyphicon-user"></span> Đăng kí</a></li>
                            <li><a style="color:red" href="@Url.Action("DangNhap","NguoiDung")"><span class="glyphicon glyphicon-log-in"></span>Đăng nhập</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>


    <div class="container khoangcach" style="margin-top:100px">
        <div class="row">
            <div class="col-md-2">
                @Html.Action("LayTenSP", "Home")
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
        <div id="divFooter" class="container-fluid">
            <div class="col-sm-6 col-md-4 col-lg-3 block-footer">
                <h3>Tin tức và sự kiện</h3>
                <div class="footer-detail">
                    <h4>Black Friday</h4>
                    <hr />
                    <img src="~/Content/img/laptop-3-04-1-600x600.jpg" class="img-responsive" />
                    <p>
                        Thứ sáu tuần này có 1 sự kiện trao đổi
                        <span id="dots">...</span>
                        <span id="more">
                            laptop cũ lấy laptop mới phù hợp với nhu cầu học tập và làm việc của các bạn sinh viên cũng như người đi làm hãy liên hệ ngay với chúng tôi để được cung
                            cấp những sản phẩm tốt
                        </span>
                    </p>
                    @*<a href="#" class="pull-right">Read More</a>*@
                    <button class="pull-right btn btn-danger" onclick="myFunction()" id="myBtn">Read more</button>
                    <div class="post-meta">
                        <a href="#"><i class="far fa-clock"></i></a>Decembar 25,2021
                    </div>
                </div>

            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 block-footer">
                <h3>nghề nghiệp</h3>
                <div class="footer-detail">
                    <ul class="list-feature">
                        <li><i class="fas fa-check"></i><a href="#">Bạn thích mua sắm?</a></li>
                        <li><i class="fas fa-check"></i><a href="#">Sản phẩm bạn lựa?</a></li>
                        <li><i class="fas fa-check"></i><a href="#">Tiện lợi của shop?</a></li>

                        <li><i class="fas fa-check"></i><a href="#">Liên hệ ngay?</a></li>
                    </ul>
                </div>

            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 block-footer">
                <h3>Liên hệ</h3>
                <div class="footer-detail">
                    <a href="#"><i class="fas fa-phone-volume"></i></a>
                    <a href="#"><i class="fab fa-youtube-square"></i></a>
                    <a href="#"><i class="fab fa-facebook"></i></a>
                </div>

            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 block-footer">
                <h3>Thông tin và vị trí</h3>
                <div class="footer-detail">
                    <table>
                        <tr>
                            <td><i class="fas fa-map-marker-alt"></i></td>
                            <td>:</td>
                            <td>44 Main Street Boston MA</td>
                        </tr>
                        <tr>
                            <td style="color:blue"><i class="fas fa-phone"></i></td>
                            <td>:</td>
                            <td>+(555)-555-55</td>
                        </tr>
                        <tr>
                            <td style="color:red"><i class="fab fa-twitter"></i></td>
                            <td>:</td>
                            <td>+(84) 28629 738 86</td>
                        </tr>
                        <tr>
                            <td style="color:blue"><i class="fas fa-blog"></i></td>
                            <td>:</td>
                            <td>TitiShop.com</td>

                        </tr>
                        <tr>
                            <td style="color:red"><i class="fas fa-envelope"></i></td>
                            <td>:</td>
                            <td>ngtquoc163@gmail.com</td>
                        </tr>
                    </table>
                </div>

            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/js-ui/jquery-ui.js"></script>

    <script src="~/Controllers/js/Control.js"></script>
    <script>
        $(document).ready(function () {
            $('.dropdown-submenu a.test').on("click", function (e) {
                $(this).next('ul').toggle();
                e.stopPropagation();
                e.preventDefault();
            });
        });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>
