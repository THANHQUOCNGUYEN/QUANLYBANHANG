@model QLBH.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <style>
        .login-form{
            width:500px;
            border:1px solid #ccc;
            position:absolute;
            top:10px;
            left:30%;
            padding:20px;
        }
        table{
            width:100%;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("DangNhap","NguoiDung",FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="login-form">
            <table>
                <tr>
                    <td colspan="2" style="text-align:center;background-color:#007bff">
                        <h4>Đăng Nhập</h4>
                    </td>
                </tr>
              
                <tr>
                    <th>
                        Email :
                    </th>
                    <td>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" ,style="width:100%", @placeholder="Vui lòng nhập Email" })
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center;color:red">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        <b>@ViewBag.error</b>
                    </td>
                </tr>
                <tr>
                    <th>
                        Mật khẩu :
                    </th>
                    <td>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @style = "width:100%", @placeholder="Vui lòng nhập password" })

                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="color:red;text-align:center">
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    </td>
                </tr>
                <tr>
                    <td colspan="2">@ViewBag.error</td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center">
                        <input type="submit" value="Đăng Nhập" class="btn btn-primary btn-sm" />

                        <a href="@Url.Action("DangKi","NguoiDung")" class="btn btn-primary btn-sm" >Đăng kí</a>
                        
                    </td>
                </tr>
            </table>

        </div>
    }
</body>
</html>
