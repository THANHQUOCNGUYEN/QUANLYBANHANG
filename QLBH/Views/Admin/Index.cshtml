<div class="row" ng-app="appChart" ng-controller="revenueStasticController">
    <div>
        <span>Thống kê doanh thu</span>
        <table style="width:100%">
            <tr>
                <td>Từ ngày</td>
                <td>Đến ngày</td>
            </tr>
            <tr>
                <td><input class="form-control" id="fromdate" type="text"/></td>
                <td><input class="form-control" id="todate" type="text"/></td>
            </tr>
            <tr>
                <td colspan="2"><button ng-click="staticChart()">Click</button></td>
            </tr>
        </table>
    </div>
    <div class="col-lg-6">
        <canvas id="bar" class="chart chart-line" chart-data="data" chart-labels="labels">
        </canvas>
    </div>
    <div class="col-lg-6">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Doanh thu</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in datachart">
                    <td>{{item.name}}</td>
                    <td>{{item.count | number}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
