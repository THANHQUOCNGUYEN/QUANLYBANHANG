<h2 style="text-align:center">Đây là trang chủ của Admin</h2>
<style>
    .row {
        padding: 10px;
    }
</style>
<div class="row">
    <div class="col-lg-3 col-sm-6 col-md-4 bg-danger">
        <b>PageView: @ViewBag.PageView</b>
    </div>
    <div class="col-lg-3 col-sm-6 col-md-4 bg-primary">

        <b>People Onine:  @ViewBag.SonguoiDangOnline</b>
    </div>
    <div class="col-lg-3 col-sm-6 col-md-4 bg-success">
        <b><i style="font-size:50px;color:red" class="fas fa-users"></i>@ViewBag.SoluongThanhVien</b>
    </div>
    <div class="col-lg-3 col-sm-6 col-md-4 bg-warning">
        <b>Tổng doanh thu:@string.Format("{0:#,### vnđ}", @ViewBag.TongDoanhThu)</b>
    </div>

</div>

