
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>demo</title>
   
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .modal-content{
            width:90%;
            text-align:center;
            border-radius:20px;
        }
        .block-image{
            margin-top:70px;
        }
        .block-image img{
            border-radius:20px;
        }
    </style>
</head>
<body>
    <div>
       <input type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#mydialog" value="Mua Hang"/>
        <div class="modal fade" id="mydialog" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-5 col-md-5 block-image">
                                <img src="~/Css/Contactus-01.jpg" class="img-responsive"/>
                            </div>
                            <div class="col-lg-6 col-md-6 block-contact">
                                <h3>Contact us</h3>
                                <form>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Enter Your name" />
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Enter Your Email" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Enter Phone Number" />
                                    </div>
                                    <div class="form-group">
                                        <textarea type="text" cols="20" rows="4" class="form-control" onblur="if (this.value == '') { this.value = 'Enter Your message'; }">
                                             
                                        </textarea>
                                        <input id="abc" type="submit" value="Submit" class="btn btn-primary pull-left"/>
                 
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="pull-left">
                            <span>Enter call:(083) 122 453 222</span>
                        </div>
                        <div class="pull-right">
                            <span>Email:thanhquoc163@gmail.com</span>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script>
        /* $('#mydialog').modal('show');*/
        $(document).ready(function () {
            $('#abc').on('submit', function (e) {
                $('#mydialog').modal('show');
                e.preventDefault();
            });
        });
    </script>
    </div>
</body>
</html>
