<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["USer"] != null)
                    {
                        <li><a href="#">Xin chào Admin : @Session["User"].ToString()</a></li>
                        <li><a href="#">Logout</a></li>
                    }
                    
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row">
            <div class="col-lg-2 col-md-4 col-sm-6">
                <nav class="nav navbar-default">
                    <h3><i class="fas fa-tasks"></i>Quản lý</h3>
                    <ul>

                        <!--Tự động nó hiểu trong admin luôn-->
                        <li><a href="@Url.Action("Index","ThanhViens")">Quản lý thành viên</a></li>
                        <li><a href="@Url.Action("Index","LoaiTVs")">Quản lý loại thành viên</a></li>
                        <li><a href="#">Quản lý khách hàng</a></li>
                        <li><a href="#">Quản lý nhân viên</a></li>
                        <li><a href="#">Quản lý hóa đơn</a></li>
                    </ul>
                </nav>

                <nav class="nav navbar-default">
                    <h3><i class="fas fa-chart-line"></i>Biểu đồ</h3>
                    <ul>

                        <!--Tự động nó hiểu trong admin luôn-->
                       
                        <li><a href="#">Báo cáo doanh thu theo tháng năm</a></li>
                        <li><a href="#">Báo cáo doanh thu 1</a></li>
                        <li><a href="#">Báo cáo doanh thu 2</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-10 col-md-8 col-sm-6">
                @RenderBody()
            </div>
        </div>
       
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>